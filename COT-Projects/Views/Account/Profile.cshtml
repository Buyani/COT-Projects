@model COT_Projects.Model.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Pprofile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
* {
    box-sizing: border-box;
}
    .card-container .round {
        border: 1px solid #03BFCB;
        border-radius: 50%;
        padding: 7px;
        background-image: url('file:///C:\Users\Admin\Source\repos\COT-Projects\COT-Projects\wwwroot\theme\assets\img\10tradeslogo.PNG');
    }

    h3 {
        margin: 10px 0;
    }

    h6 {
        margin: 5px 0;
        text-transform: uppercase;
    }

    p {
        font-size: 14px;
        line-height: 21px;
    }

    .card-container {
        background-color: #f2f2f2;
        border-radius: 5px;
        box-shadow: 0px 10px 20px -10px rgba(0, 0, 0, 0.75);
        color: #b3b8cd;
        padding-top: 30px;
        padding-bottom: 250px;
        position: relative;
        width: 350px;
        max-width: 100%;
        text-align: center;
    }
    .name {
        color: #cc9900;
    }
    .tittle {
        color: #1a1a00;
    }
    .primary {
        color: #FFD700;
        background-color: #1a1a00;
    }
</style>

<div class="card-container">
    <img class="round" src="~/theme/assets/img/user.png" width="100" height="100" alt="user" />
    <h5 class="name">@Model.Email.ToString().Split("@")[0]</h5>
    <h6>10 trades</h6>
    <p class="tittle">Forex Trader</p>
    <div class="buttons">
        <button class="primary">
            Update Profile
        </button>
    </div>
</div>



