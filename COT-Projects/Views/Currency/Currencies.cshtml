@model IEnumerable<COT_Projects.Model.ViewModels.CurrencyModelView>

@{
    ViewData["Title"] = "Currencies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .heads {
        background-color: #9fdf9f;
    }
</style>
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title">Currencies</h3>
        <div class="right">
            <button type="button" class="btn-toggle-collapse"><i class="lnr lnr-chevron-up"></i></button>
            <button type="button" class="btn-remove"><i class="lnr lnr-cross"></i></button>
        </div>
    </div>
    <div class="panel-body no-padding">
        <table id="tblReports" class="table table-bordered table-striped table-responsive table-hover">
            <thead>
                <tr class="heads">
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Full Name
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
                }
            </tbody>

        </table>
    </div>
    <div class="panel-footer">
        <div class="row">
            <div class="col-md-6"><span class="panel-note"><i class="fa fa-clock-o"></i> Last 24 hours</span></div>
            <div class="col-md-6 text-right"><a href="@Url.Action("CreateCurrnecy", "Currency")" class="btn btn-primary btn-sm">new currency</a></div>
        </div>
    </div>
</div>
